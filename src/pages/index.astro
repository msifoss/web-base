---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import Testimonial from '../components/Testimonial.astro';
import CTA from '../components/CTA.astro';
import { siteConfig } from '../config/site';
import heroBg from '../assets/images/hero-bg.webp';

// Services offered
const features = [
  {
    title: 'Service One',
    description: 'Professional services tailored to your needs. We deliver quality results that exceed expectations.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" /></svg>`,
    href: '/about',
  },
  {
    title: 'Service Two',
    description: 'Comprehensive solutions designed to help your business grow. Experience the difference quality makes.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" /></svg>`,
    href: '/about',
  },
  {
    title: 'Service Three',
    description: 'Reliable and affordable options for every budget. Get the support you need, when you need it.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    href: '/contact',
  },
  {
    title: 'Service Four',
    description: 'Expert guidance from our experienced team. We are committed to your success every step of the way.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" /></svg>`,
    href: '/contact',
  },
];

// Customer testimonials
const testimonials = [
  {
    quote: "Outstanding service from start to finish. The team went above and beyond to meet our needs. Highly recommend!",
    author: "Jane D.",
    role: "Business Owner",
    company: "Local Business",
  },
  {
    quote: "Professional, reliable, and great value. They delivered exactly what they promised. Will definitely use again.",
    author: "John S.",
    role: "Project Manager",
    company: "Tech Startup",
  },
  {
    quote: "A pleasure to work with. Their expertise and attention to detail made all the difference for our project.",
    author: "Sarah M.",
    role: "Marketing Director",
    company: "Creative Agency",
  },
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <Hero
    title={siteConfig.tagline}
    subtitle={siteConfig.description}
    primaryCta={{ text: "Get Started", href: "/contact" }}
    secondaryCta={{ text: "Learn More", href: "/about" }}
    backgroundImage={heroBg}
  />

  <!-- Contact Banner -->
  <div class="bg-secondary-600 text-white py-3">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4 text-center">
        <span class="font-semibold">{siteConfig.tagline}</span>
        <span class="hidden sm:inline">|</span>
        <a href={`tel:${siteConfig.contact.phone}`} class="font-bold hover:underline">
          {siteConfig.contact.phone}
        </a>
      </div>
    </div>
  </div>

  <!-- Services Section -->
  <Section
    title="Our Services"
    subtitle="Discover how we can help your business succeed."
    background="gray"
  >
    <FeatureGrid features={features} columns={4} />
  </Section>

  <!-- Why Choose Us Section -->
  <Section
    title="Why Choose Us"
    subtitle="Experience the difference."
  >
    <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
      <div>
        <p class="text-lg text-gray-600">
          At {siteConfig.name}, we're committed to delivering exceptional results for every client.
          Our experienced team combines industry expertise with personalized service to ensure
          your complete satisfaction. Whether you're a small business or a large enterprise,
          we have solutions tailored to your needs.
        </p>
        <ul class="mt-8 space-y-4">
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Quality First</strong> - We never compromise on quality</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Fast Turnaround</strong> - Timely delivery on every project</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Expert Team</strong> - Experienced professionals at your service</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>24/7 Support</strong> - We're here when you need us</span>
          </li>
        </ul>
        <div class="mt-8">
          <a
            href="/about"
            class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700"
          >
            Learn more about us
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
      <div class="relative">
        <!-- Stats Grid -->
        <div class="grid grid-cols-2 gap-4">
          <div class="rounded-xl bg-primary-50 p-6 text-center">
            <div class="text-3xl font-bold text-primary-600">500+</div>
            <div class="mt-1 text-sm text-gray-600">Happy Clients</div>
          </div>
          <div class="rounded-xl bg-secondary-50 p-6 text-center">
            <div class="text-3xl font-bold text-secondary-600">10+</div>
            <div class="mt-1 text-sm text-gray-600">Years Experience</div>
          </div>
          <div class="rounded-xl bg-secondary-50 p-6 text-center">
            <div class="text-3xl font-bold text-secondary-600">24/7</div>
            <div class="mt-1 text-sm text-gray-600">Support</div>
          </div>
          <div class="rounded-xl bg-primary-50 p-6 text-center">
            <div class="text-3xl font-bold text-primary-600">100%</div>
            <div class="mt-1 text-sm text-gray-600">Satisfaction</div>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Testimonials Section -->
  <Section
    title="What Our Clients Say"
    subtitle="Don't just take our word for it."
    background="gray"
  >
    <div class="grid gap-8 md:grid-cols-3">
      {testimonials.map((testimonial) => (
        <Testimonial {...testimonial} />
      ))}
    </div>
  </Section>

  <!-- CTA Section -->
  <CTA
    title="Ready to Get Started?"
    description="Contact us today to discuss how we can help your business succeed. Our team is ready to answer your questions."
    primaryButton={{ text: "Contact Us", href: "/contact" }}
    secondaryButton={{ text: "Learn More", href: "/about" }}
  />
</Layout>
